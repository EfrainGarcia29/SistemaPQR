<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Tipo solicitud</th>
      <th>Usuario</th>
      <th>Adjunto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.descripcion %></td>
        <td><%= request.fecha %></td>
        <td><%= request.hora %></td>
        <td><%= request.tipo_solicitud %></td>
        <td><%= request.usuario %></td>
        <td><%= request.adjunto %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
